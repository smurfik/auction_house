<form class="uggh">
  <input id="pac-input" class="controls" type="text" placeholder="Search Box">
</form>


<div id="map-canvas">
</div>

<div class="sidebar">
  <div class="home-picture">
    <img class="image" >
  </div>
  <div class="address-row">
    <div class="address">
      <h2><span class="street"></span></h2>
      <h3><span class="city"></span>,<span class="state"></span> <span class="zip"></span></h3>
      <h4><span class="bedrooms"></span> bed <span class="bath"></span> bath <span class="sqft"></span> sqft</h4>
    </div>
    <% if @current_user %>
      <%= form_tag create_bid_path, method: "POST", class: "form" do %>
        <%= text_field_tag "bid[price]", nil, placeholder: "enter your price", class: "bid-form" %>
        <%= text_field_tag "bid[house_id]", nil, type: "hidden" %>
        <%= text_field_tag "house[zillow_id]", nil, type: "hidden" %>
        <%= text_field_tag "house[address]", nil, type: "hidden" %>
        <%= text_field_tag "house[city]", nil, type: "hidden" %>
        <%= text_field_tag "house[state]", nil, type: "hidden" %>
        <%= text_field_tag "house[zip]", nil, type: "hidden" %>
        <%= submit_tag "Bid Now!", class: "bid-now-button" %>
      <% end %>
    <% else %>
      <div class="text">
      <div class="bid-now-button">
          Bid Now!
      </div>
      </div>
    <% end %>
    <div class="buy-now-button">
        Buy Now!
    </div>
  </div>

  <div class="house-details">
    <div class="property-details">
      <div class="sale">
        <h2>For Sale</h2>
        <h3>ZestimateÂ®: <br>$<span class="zestimate"></span></h3>
        <h4>Rent Zestimate: <br><span class="rent"></span></h4>
      </div>
      <div class="facts">
        <ul>
          <li>Walk Score: <span class="walk"></span></li>
          <li>Lot: <span class="lotsqft"></span> sqft</li>
          <li><span class="type"></span></li>
          <li>Built: <span class="year"></span></li>
          <li>Neighborhood:<span class="neighborhood"></span> </li>
        </ul>
      </div>
    </div>
    <div class="property-details">
      <div class="description">
        <h3>Description:</h3>
        <p><span class="description"></span></p>
        <p class="auto-describe" style="display: none">
          This property is <span class="sqft"></span> sqft with a lot size of <span class="lotsqft"></span> sqft and was built in <span class="year"></span>. Located in the <span class="neighborhood"></span> neighborhood with a walk score of <span class="walk"></span>, it's most certainly a great place to live.
        </p>
      </div>
    </div>
    <div class="property-details">
      <div class="facts2">
        <ul>
          <li>Date last sold: <span class="sold-date"></span> </li>
          <li>Price last sold: $<span class="sold-price"></span></li>
        </ul>
      </div>
    </div>
    <div class="zillow-pictures">
    </div>
  </div>
</div>
